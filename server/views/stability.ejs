<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/><meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title><%= title %> — KitDev</title>
  <link rel="icon" href="/favicon.ico"/>
  <link rel="stylesheet" href="/css/base.css"/>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.3/dist/chart.umd.js"></script>
  <style>
    table{width:100%;border-collapse:collapse}
    th,td{border:1px solid #eee;padding:6px 8px;text-align:left}
    th{background:#fafafa}
  </style>
</head>
<body>
  <%- include('partials/navbar', { page: page }) %>
  <main class="container">
    <h1><%= title %></h1>

    <section>
      <h3>Create Stability Study</h3>
      <form id="study-form">
        <div><label>Lot ID *</label><br/><input name="lot_id" required placeholder="e.g. KIT-2025-001 or QDPLGA-2025-001"/></div>
        <div><label>Condition</label><br/><input name="condition" placeholder="e.g. 4°C dark"/></div>
        <div><label>Plan days (CSV)</label><br/><input name="plan_days" placeholder="0,7,14,30,60,90" value="0,7,14,30,60,90"/></div>
        <button type="submit">Create Study</button>
      </form>
    </section>

    <section style="margin-top:18px;">
      <h3>Add Measurement</h3>
      <form id="point-form">
        <div><label>Study *</label><br/>
          <select name="study_id" id="study-select"></select>
        </div>
        <div><label>Day *</label><br/><input name="day" type="number" step="0.1" required placeholder="e.g. 14"/></div>
        <div><label>Signal (RFU) *</label><br/><input name="signal" type="number" step="0.0001" required placeholder="e.g. 148.2"/></div>
        <div><label>Temp (°C)</label><br/><input name="temp_c" type="number" step="0.1" placeholder="e.g. 4"/></div>
        <div><label>Notes</label><br/><input name="notes" placeholder="Optional"/></div>
        <button type="submit">Save Point</button>
      </form>
      <div id="point-feedback" style="margin-top:8px;"></div>
    </section>

    <section style="margin-top:18px;">
      <h3>Series</h3>
      <canvas id="stab-chart" width="900" height="260" style="max-width:100%;"></canvas>
      <table style="margin-top:8px;">
        <thead><tr><th>Day</th><th>Signal</th><th>% change from Day 0</th><th>Temp (°C)</th><th>When</th><th>Notes</th></tr></thead>
        <tbody id="stab-body"><tr><td colspan="6">Pick a study…</td></tr></tbody>
      </table>
    </section>

    <section style="margin-top:18px;">
      <h3>Studies</h3>
      <table>
        <thead><tr><th>Study</th><th>Lot</th><th>Condition</th><th>Plan days</th><th>Created</th></tr></thead>
        <tbody id="studies-body"><tr><td colspan="5">Loading…</td></tr></tbody>
      </table>
    </section>
  </main>

  <script src="/js/stability.js"></script>
</body>
</html>
