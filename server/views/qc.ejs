<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/><meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title><%= title %> — KitDev</title>
  <link rel="icon" href="/favicon.ico"/>
  <link rel="stylesheet" href="/css/base.css"/>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <%- include('partials/navbar', { page: page }) %>
  <main class="container">
    <h1><%= title %></h1>

    <section>
      <h3>Create QC Control</h3>
      <form id="qc-create">
        <div><label>Control ID *</label><br/><input name="control_id" required placeholder="e.g. POS-LOW-001"/></div>
        <div><label>Kit Lot (optional)</label><br/><input name="lot_id" placeholder="e.g. KIT-2025-001"/></div>
        <div><label>Target Level</label><br/><input name="target_level" placeholder="e.g. Positive-Low"/></div>
        <div><label>Unit</label><br/><input name="unit" placeholder="RFU"/></div>
        <div><label>Mean</label><br/><input name="mean" type="number" step="0.0001" placeholder="e.g. 150.0"/></div>
        <div><label>SD</label><br/><input name="sd" type="number" step="0.0001" placeholder="e.g. 10.0"/></div>
        <div><label>Notes</label><br/><textarea name="notes" rows="2" placeholder="Optional"></textarea></div>
        <button type="submit">Save Control</button>
      </form>
    </section>

    <section style="margin-top:18px;">
      <h3>Add QC Result</h3>
      <form id="qc-add">
        <div><label>Control *</label><br/>
          <select name="control_id" id="qc-select"></select>
        </div>
        <div><label>Value *</label><br/><input name="value" type="number" step="0.0001" required /></div>
        <div><label>Operator</label><br/><input name="operator_email" placeholder="user@asian-loop.com"/></div>
        <div><label>Run ID (optional)</label><br/><input name="run_id" placeholder="link to Runs if any"/></div>
        <div><label>Note</label><br/><input name="note" /></div>
        <button type="submit">Add Result</button>
      </form>
      <div id="qc-feedback" style="margin-top:8px; font-weight:600;"></div>
    </section>

    <section style="margin-top:18px;">
      <h3>Selected Control — Levey–Jennings</h3>
      <canvas id="qc-chart" width="800" height="240" style="max-width:100%;"></canvas>
      <div id="qc-meta" style="font-size:13px; color:#555; margin-top:6px;"></div>
    </section>

    <section style="margin-top:18px;">
      <h3>Recent Results</h3>
      <table border="1" cellspacing="0" cellpadding="6">
        <thead><tr><th>Control</th><th>Time</th><th>Value</th><th>Z</th><th>Pass (±2SD)</th></tr></thead>
        <tbody id="qc-recent"><tr><td colspan="5">Loading…</td></tr></tbody>
      </table>
    </section>

    <section style="margin-top:18px;">
      <h3>Update Kit Lot Status</h3>
      <form id="kit-status">
        <div><label>Kit Lot ID *</label><br/><input name="kit_lot_id" required placeholder="e.g. KIT-2025-001"/></div>
        <div><label>Status *</label><br/>
          <select name="qc_status">
            <option>Draft</option>
            <option>On hold</option>
            <option>Released</option>
            <option>Rejected</option>
          </select>
        </div>
        <button type="submit">Update</button>
      </form>
      <div id="kit-feedback" style="margin-top:8px;"></div>
    </section>
  </main>

  <script src="/js/qc.js"></script>
</body>
</html>
