<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/><meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title><%= title %> — KitDev</title>
  <link rel="icon" href="/favicon.ico"/>
  <link rel="stylesheet" href="/css/base.css"/>
</head>
<body>
  <%- include('partials/navbar', { page: page }) %>
  <main class="container">
    <h1><%= title %></h1>

    <section>
      <h3>New Run</h3>
      <form id="run-form">
        <div>
          <label>Sample ID</label><br/>
          <input name="sample_id" required placeholder="e.g. SAL-0001"/>
        </div>
        <div>
          <label>Operator email</label><br/>
          <input name="operator_email" placeholder="e.g. user@asian-loop.com"/>
        </div>
        <div>
          <label>Raw intensities (CSV)</label><br/>
          <input name="intensities_csv" placeholder="e.g. 112, 118, 121"/>
        </div>
        <div>
          <label>Notes</label><br/>
          <textarea name="notes" rows="2" placeholder="Optional notes..."></textarea>
        </div>
        <button type="submit">Save Run</button>
      </form>
    </section>

    <section style="margin-top:24px">
      <h3>Recent Runs</h3>
      <table border="1" cellspacing="0" cellpadding="6">
        <thead>
          <tr>
            <th>Sample ID</th>
            <th>Operator</th>
            <th>Intensities</th>
            <th>Created</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody id="runs-body">
          <tr><td colspan="5">Loading…</td></tr>
        </tbody>
      </table>
    </section>
  </main>

  <script src="/js/runs.js"></script>
</body>
</html>
